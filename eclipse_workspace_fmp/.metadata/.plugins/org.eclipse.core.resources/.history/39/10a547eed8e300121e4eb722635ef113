package Lock;

public class myThread extends Thread {

	private Counter v = new Counter();

	public myThread(Counter v) {
		this.v = v;
	}

	public void run() {

		for (int i = 0; i < 100; i++) {
			try {
				
				v.increment();
				
				System.out.println(v.getValue());
				
				Thread.sleep(100);
				
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
	}

}
