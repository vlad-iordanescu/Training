package prezentari;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

import data.Car;

public class SerializationExample {

	public void serializareaMasina(Car car, File outputFile) {

		FileOutputStream fos = null;
		ObjectOutputStream objectStream = null;

		try {
			fos = new FileOutputStream(outputFile);
			objectStream = new ObjectOutputStream(fos);

			objectStream.writeObject(car);

		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			try {

				if (objectStream != null) {
					objectStream.close();
				}

				if (fos != null) {
					fos.close();
				}

			} catch (IOException e) {
				e.printStackTrace();
			}
		}

	}

	public Car deserializareaMasina(File file) {

		FileInputStream fis = null;
		ObjectInputStream objectStream = null;

		try {

			fis = new FileInputStream(file);
			objectStream = new ObjectInputStream(fis);
			return (Car) objectStream.readObject();

		} catch (IOException | ClassNotFoundException e) {
			e.printStackTrace();
		} finally {
			try {

				if (objectStream != null) {
					objectStream.close();
				}

				if (fis != null) {
					fis.close();
				}

			} catch (IOException e) {
				e.printStackTrace();
			}
		}

		return null;
	}

	public static void main(String[] args) {
		
		File f = new File("masina");

	}

}
